{% extends "base.jinja" %}
{% block content %}
  <h1 class="title">Edit Song â€” {{ song.title }}</h1>
  <div class="box">
    <form method="POST">
      <div class="field"><div class="control"><input class="input" name="title" value="{{ song.title }}" required></div></div>
      <div class="field"><div class="control"><input class="input" name="performers" value="{{ song.performers_text }}" placeholder="Performers (comma separated)"></div></div>
      <div class="field"><div class="control"><input class="input" name="act" value="{{ song.act }}" type="number" min="1"></div></div>
      <div class="field"><div class="control"><button class="button is-primary" type="submit">Save</button> <a class="button is-light" href="{{ url_for('view.view_songs', production_id=song.production_id) }}">Cancel</a></div></div>
    </form>
    <hr>
    <a class="button is-danger" href="{{ url_for('edit.delete_song', song_id=song.id) }}">Delete song</a>
  </div>
{% endblock %}
